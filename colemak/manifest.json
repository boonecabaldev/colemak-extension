{
  "manifest_version": 2,
  "name": "Colemak Extension",
  "version": "1.0",
  "description": "A Chrome extension to convert Dvorak to Colemak.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons8-copy-16.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+H",
        "mac": "Command+H"
      },
      "description": "Open the popup with Command+H on Mac"
    }
  },
  "icons": {
    "16": "icons8-copy-16.png"
  }
}